@model Campus.UI.Models.RegisterViewModel

@{
    ViewBag.Title = "Registrarse";
    var fechaMaxima = DateTime.Now.ToString("yyyy-MM-dd");
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <h4>Cree una cuenta nueva.</h4>
        <hr />

        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="row mb-3">
            @Html.LabelFor(m => m.Nombre, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.Apellido, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.Telefono, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", type = "tel",minLength="8", maxlength="8" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.Cedula, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Cedula, new { @class = "form-control", minLength = "9", maxlength = "9" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.FechaDeNacimiento, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FechaDeNacimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", max = fechaMaxima })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.Rol, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Rol, new List<SelectListItem>
{
    new SelectListItem { Text = "Estuadiante", Value = "Estudiantes" },
    new SelectListItem { Text = "Profesor", Value = "Profesores" },
    new SelectListItem { Text = "Administrador", Value = "Administradores" }
}, "Seleccione un tipo", new { @class = "form-control", id = "Rol" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Registrarse" class="btn btn-outline-dark" />
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
