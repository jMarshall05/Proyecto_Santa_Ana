@using Campus.UI.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = null;
    <link rel="icon" type="image/png" href="https://santaana.ed.cr/wp-content/uploads/LOGO-1.png" />
    @Styles.Render("~/Content/css")


}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #F44336; /* Fondo rojo */
            background-image: url('https://santaana.ed.cr/wp-content/uploads/csalib.png');
            background-repeat: no-repeat;
            background-position: left center; /*centrado de la imagen*/
            background-size: 700px;
        }


        .login-container {
            margin-top: 10%;
            margin-left: auto;
            background-color: whitesmoke; /* Fondo rojo translúcido */
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
            color: black;
        }


        h2, h4 {
            text-align: center;
        }

        label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-5 login-container">
                <main aria-labelledby="title">
                    <h2>¡Bienvenido a Santa Ana a un Click!</h2>
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="mb-3 row">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo electrónico" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3 row">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3 row">

                                <div class="form-check">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
                                </div>

                            </div>

                            <div class="mb-3 row">
                                <input type="submit" value="Iniciar sesión" class="btn w-100" style="background-color: #F44336; border-color: #F44336; color: white;" />


                            </div>

                            <p class="text-center">
                                @Html.ActionLink("Registrarse como usuario nuevo", "Register")
                            </p>
                        }
                    </section>


                </main>
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
