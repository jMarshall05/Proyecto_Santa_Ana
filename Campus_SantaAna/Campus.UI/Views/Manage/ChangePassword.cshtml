@model Campus.UI.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar contraseña";
}

<main aria-labelledby="title" class="d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow p-4" style="max-width: 600px; width: 100%;">
        <h2 class="container-title">Cambiar Contraseña</h2>

        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger text-center mb-3" })

            <div class="mb-3 d-flex justify-content-center">
                <div class="w-75">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Contraseña actual" })
                </div>
            </div>

            <div class="mb-3 d-flex justify-content-center">
                <div class="w-75">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Nueva contraseña" })
                </div>
            </div>

            <div class="mb-4 d-flex justify-content-center">
                <div class="w-75">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar contraseña" })
                </div>
            </div>

            <div class="text-center">
                <input type="submit" value="Cambiar contraseña" class="btn btn-danger px-4" />
            </div>
        }
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
