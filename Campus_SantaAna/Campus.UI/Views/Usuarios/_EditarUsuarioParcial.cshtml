@model Campus.Abstracciones.ModelosUI.UsuariosDto
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <div class="card shadow rounded-4">
            <div class="card-header bg-danger text-white rounded-top-4">
                <h4 class="mb-0">Gestión de Usuario</h4>
            </div>

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                @Html.HiddenFor(model => model.IdUsuario)

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.FechaDeNacimiento, htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(model => model.FechaDeNacimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.FechaDeNacimiento, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.Label("IdGrupo", "Grupo", new { @class = "form-label fw-bold" })

                        @Html.DropDownList(
                            "IdGrupo",
                            (IEnumerable<SelectListItem>)ViewBag.ListaDeGrupos,
                            "Agregue el usuario a un grupo",
                            new { @class = "form-control" }
                        )

                        @Html.ValidationMessage("IdGrupo", "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="mb-3">
                    @Html.LabelFor(m => m.Rol, htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.DropDownListFor(m => m.Rol, new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Estudiante", Value = "Estudiantes" },
                        new SelectListItem { Text = "Profesor", Value = "Profesores" },
                        new SelectListItem { Text = "Administrador", Value = "Administradores" }
                    }, "Seleccione un tipo", new { @class = "form-select", id = "Rol" })
                </div>

                <div class="form-check form-switch mb-3">
                    @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-check-input" } })
                    @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "form-check-label fw-bold" })
                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-arrow-left me-1"></i> Volver a la lista
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}