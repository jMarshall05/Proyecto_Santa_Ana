@model Campus.Abstracciones.ModelosUI.AnuncioDto

@{
    ViewBag.Title = "Editar Anuncio";
    <link rel="icon" type="image/png" href="https://santaana.ed.cr/wp-content/uploads/LOGO-1.png" />
    @Styles.Render("~/Content/css")
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>


        .form-container {
            margin-top: 5%;
            margin-left: auto;
            margin-right: auto;
            background-color: rgba(255, 255, 255, 0.95);
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
            max-width: 500px;
            color: black;
        }

        h2 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        label {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="form-container">
        <main aria-labelledby="title">
            <h2 class ="container-title">
                Editar Anuncio</h2>

                @using (Html.BeginForm("Edit", "Anuncios", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.IdAnuncio)

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.Titulo)
                        @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.Descripcion)
                        @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = 5, required = "required" })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.FechaEvento)
                        @Html.EditorFor(model => model.FechaEvento, new { htmlAttributes = new { @class = "form-control", type = "datetime-local", required = "required" } })
                        @Html.ValidationMessageFor(model => model.FechaEvento, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.FechaPublicacion)
                        @Html.EditorFor(model => model.FechaPublicacion, new { htmlAttributes = new { @class = "form-control", type = "datetime-local", required = "required" } })
                        @Html.ValidationMessageFor(model => model.FechaPublicacion, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn" style="background-color: #F44336; border-color: #F44336; color: white;">Guardar Cambios</button>
                    @Html.ActionLink("Cancelar", "ListarAnuncios", null, new { @class = "btn btn-secondary ml-2" })
                }
</main>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>