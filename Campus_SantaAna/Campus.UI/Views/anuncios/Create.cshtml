@model Campus.Abstracciones.ModelosUI.AnuncioDto

@{
    ViewBag.Title = "Publicar Anuncio";
    <link rel="icon" type="image/png" href="https://santaana.ed.cr/wp-content/uploads/LOGO-1.png" />
    @Styles.Render("~/Content/css")
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      

        .form-container {
            margin-top: 5%;
            margin-left: auto;
            margin-right: auto;
            background-color: rgba(255, 255, 255, 0.95);
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
            max-width: 500px;
            color: black;
        }

        h2 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        label {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="form-container">
        <main aria-labelledby="title">
            <h2 class="container-title">Publicar Nuevo Anuncio</h2>

            @using (Html.BeginForm("Create", "Anuncios", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row mb-3">
                    @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control", placeholder = "Título del Anuncio", required = "required" })
                    @Html.ValidationMessageFor(m => m.Titulo, "", new { @class = "text-danger" })
                </div>

                <div class="row mb-3">
                    @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 5, placeholder = "Descripción del Anuncio", required = "required" })
                    @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
                </div>

                <div class="row mb-3">
                    <label for="FechaEvento">Fecha del Evento</label>
                    @Html.TextBoxFor(m => m.FechaEvento, new { @class = "form-control", type = "datetime-local", placeholder = "Fecha del Evento", required = "required" })
                    @Html.ValidationMessageFor(m => m.FechaEvento, "", new { @class = "text-danger" })
                </div>

                <div class="row mb-3">
                    <label for="FechaPublicacion">Fecha de Publicación</label>
                    @Html.TextBoxFor(m => m.FechaPublicacion, new { @class = "form-control", type = "datetime-local", placeholder = "Fecha de Publicación", required = "required" })
                    @Html.ValidationMessageFor(m => m.FechaPublicacion, "", new { @class = "text-danger" })
                </div>


                    <button type="submit" class="btn" style="background-color: #F44336; border-color: #F44336; color: white;">Guardar</button>
                    @Html.ActionLink("Cancelar", "ListarAnuncios", null, new { @class = "btn btn-secondary ml-2" })
            }
        </main>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
