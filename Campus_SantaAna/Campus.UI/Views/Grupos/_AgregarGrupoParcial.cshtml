@model Campus.Abstracciones.ModelosUI.GruposDto

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container p-4 rounded shadow-sm bg-light">
        <h3 class="mb-4 text-primary">
            <i class="fas fa-users me-2"></i> Gestión de Grupo
        </h3>

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div class="form-group mb-4">
            @Html.LabelFor(model => model.nombre_grupo, htmlAttributes: new { @class = "form-label fw-bold" })
            <div>
                @Html.EditorFor(model => model.nombre_grupo, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre del grupo" } })
                @Html.ValidationMessageFor(model => model.nombre_grupo, "", new { @class = "text-danger small" })
            </div>
        </div>

        <div class="form-group mb-4">
            @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "form-label fw-bold" })
            <div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-light h-100 align-items-start pt-3">
                            <i class="fas fa-align-left text-primary"></i>
                        </span>
                    </div>
                    @Html.TextAreaFor(model => model.descripcion, new
                    {
                        @class = "form-control",
                        rows = 4,
                        placeholder = "Detalles del grupo..."
                    })
                </div>           
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger small" })
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a class="btn btn-outline-secondary" data-bs-dismiss="modal">
                <i class="fas fa-arrow-left me-2"></i> Volver
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-2"></i> Guardar
            </button>
        </div>
    </div>
}
