@model Campus.Abstracciones.ModelosUI.GruposDto

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-pen me-2"></i>Editar Grupo</h5>
        </div>

        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
            @Html.HiddenFor(model => model.id_grupo)

            <div class="mb-3">
                @Html.LabelFor(model => model.nombre_grupo, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.EditorFor(model => model.nombre_grupo, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre del grupo" } })
                @Html.ValidationMessageFor(model => model.nombre_grupo, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "form-label fw-bold" })
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-light h-100 align-items-start pt-3">
                            <i class="fas fa-align-left text-primary"></i>
                        </span>
                    </div>
                    @Html.TextAreaFor(model => model.descripcion, new
                    {
                        @class = "form-control",
                        rows = 4,
                        placeholder = "Detalles del grupo..."
                    })
                </div>        
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>

            <div class="form-check form-switch mb-3">
                @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-check-input" } })
                @Html.LabelFor(model => model.estado, htmlAttributes: new { @class = "form-check-label fw-bold" })
                @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <a class="btn btn-outline-secondary" data-bs-dismiss="modal">
                <i class="fas fa-arrow-left me-2"></i> Volver
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Guardar
            </button>
        </div>
    </div>
}
