@model Campus.Abstracciones.ModelosUI.GruposDto

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Detalles del Grupo</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-4 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.nombre_grupo)
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.nombre_grupo)
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.descripcion)
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.descripcion)
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.creado_por)
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.creado_por)
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.FechaDeCreacion)
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.FechaDeCreacion)
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.FechaDeModificacion)
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.FechaDeModificacion)
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.estado)
            </div>
            <div class="col-md-8">
                @if (Model.estado)
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactivo</span>
                }
            </div>
        </div>
    </div>
    <div class="card-footer bg-light d-flex justify-content-end">
        <button class="btn btn-outline-secondary" data-bs-dismiss="modal">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </button>
    </div>
</div>
