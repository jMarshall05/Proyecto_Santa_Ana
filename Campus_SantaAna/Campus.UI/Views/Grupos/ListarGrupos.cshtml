@model IEnumerable<Campus.Abstracciones.ModelosUI.GruposDto>

@{
    ViewBag.Title = "Lista de Grupos";
}


<div class="container-fluid px-4">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="m-0 text-danger">
                    <i class="fas fa-users me-2"></i>@ViewBag.Title
                </h4>
                <button class="btn btn-sm btn-secondary btn-Agregar-Grupo mx-1" data-id="@ViewBag.Id" data-bs-toggle="tooltip">
                    <i class="fas fa-users me-1"></i> Agregar Grupo
                </button>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 table-bordered" id="TablaDeGrupos">
                    <thead class="table-danger">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.nombre_grupo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.creado_por)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.estado)
                            </th>
                            <th></th>
                        </tr>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="hover-shadow">
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre_grupo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.creado_por)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.estado)
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-primary btn-Editar-Grupo mx-1" data-id="@item.id_grupo" data-bs-toggle="tooltip">
                                        <i class="fas fa-edit me-1"></i> Editar
                                    </button>
                                    <button class="btn btn-sm btn-warning btn-Detalles-Grupo mx-1" data-id="@item.id_grupo" data-bs-toggle="tooltip">
                                        <i class="fas fa-info-circle me-1"></i> Detalles
                                    </button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>


        <div class="modal fade" id="GruposModal" tabindex="-1" aria-labelledby="GruposModalTittleLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content shadow-lg">
                    <div class="modal-header bg-primary text-white">
                        <h1 class="modal-title fs-5" id="UGruposModalTittleLabel">Agregar</h1>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Grupos/ScriptDeGrupos.js"></script>
}
