@model TareaDto

@{
    ViewBag.Title = "Crear Tarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient-primary text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-plus-circle mr-2"></i>Crear Tarea
            </h3>
        </div>

        <div class="card-body py-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <!-- Título -->
                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.Titulo, new { @class = "font-weight-bold text-primary mb-2" })
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-light h-100">
                                        <i class="fas fa-heading text-primary"></i>
                                    </span>
                                </div>
                                @Html.EditorFor(model => model.Titulo, new
                                {
                                    htmlAttributes = new
                                    {
                                    @class = "form-control",
                                    placeholder = "Ej: Presentación final del proyecto"
                                    }
                                })
                            </div>
                            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <!-- Descripción -->
                <div class="form-group mb-4">
                    @Html.LabelFor(model => model.Descripcion, new { @class = "font-weight-bold text-primary mb-2" })
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light h-100 align-items-start pt-3">
                                <i class="fas fa-align-left text-primary"></i>
                            </span>
                        </div>
                        @Html.TextAreaFor(model => model.Descripcion, new
                        {
                            @class = "form-control",
                            rows = 4,
                            placeholder = "Describa los detalles de la tarea..."
                        })
                    </div>
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger small" })
                </div>

                <!-- Sección de Fechas -->
                <div class="row">
                    <!-- Fecha de Entrega -->
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.FechaEntrega, new { @class = "font-weight-bold text-primary mb-2" })
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-light h-100">
                                        <i class="far fa-calendar-alt text-primary"></i>
                                    </span>
                                </div>
                                @Html.EditorFor(model => model.FechaEntrega, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control",
                                        type = "datetime-local"
                                    }
                                })
                            </div>
                            @Html.ValidationMessageFor(model => model.FechaEntrega, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <!-- Fecha de Publicación -->
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.FechaPublicacion, new { @class = "font-weight-bold text-primary mb-2" })
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-light h-100">
                                        <i class="far fa-calendar-check text-primary"></i>
                                    </span>
                                </div>
                                @Html.EditorFor(model => model.FechaPublicacion, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control",
                                        type = "datetime-local"
                                    }
                                })
                            </div>
                            @Html.ValidationMessageFor(model => model.FechaPublicacion, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <!-- Fecha de Creación (automática) -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.FechaCreacion, new { @class = "font-weight-bold text-primary mb-2" })
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-light h-100">
                                        <i class="far fa-clock text-primary"></i>
                                    </span>
                                </div>
                                <input type="text"
                                       class="form-control bg-light"
                                       value="@DateTime.Now.ToString("dd/MM/yyyy HH:mm")"
                                       readonly>
                                @Html.HiddenFor(model => model.FechaCreacion, new { Value = DateTime.Now.ToString("yyyy-MM-ddTHH:mm") })
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Archivo Adjunto -->
                <div class="form-group mb-4">
                    @Html.LabelFor(model => model.ArchivoAdjunto, new { @class = "font-weight-bold text-primary mb-2" })
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light h-100">
                                <i class="fas fa-paperclip text-primary"></i>
                            </span>
                        </div>
                        @Html.EditorFor(model => model.ArchivoAdjunto, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control",
                                placeholder = "Nombre del archivo adjunto"
                            }
                        })
                    </div>
                    @Html.ValidationMessageFor(model => model.ArchivoAdjunto, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group mt-5">
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary btn-lg mr-3 px-4">
                            <i class="fas fa-save mr-2"></i>Guardar Tarea
                        </button>
                        <a href="@Url.Action("ListarTareas")" class="btn btn-outline-secondary btn-lg px-4 ml-3">
                            <i class="fas fa-times mr-2"></i>Cancelar
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
            border: none;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        }

        .form-control, .input-group-text {
            border-radius: 8px;
            transition: all 0.3s;
            height: calc(2.25rem + 8px);
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
                border-color: #a1b5f1;
            }

        .input-group-text {
            background-color: #f8f9fc;
            border-right: none;
            width: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .input-group-text i {
                font-size: 1.1rem;
            }

        textarea.form-control {
            height: auto !important;
            min-height: 120px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            border: none;
            box-shadow: 0 4px 6px rgba(50, 50, 93, 0.11);
        }

            .btn-primary:hover {
                transform: translateY(-1px);
                box-shadow: 0 7px 14px rgba(50, 50, 93, 0.1);
            }

        .btn-outline-secondary {
            border-width: 2px;
        }

        label {
            font-size: 0.9rem;
            letter-spacing: 0.5px;
            margin-bottom: 0.5rem;
        }

        .ml-3 {
            margin-left: 1.5rem !important;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <script>
        $(document).ready(function () {
            // Establecer valores iniciales para los campos datetime-local
            const now = new Date();
            const nowStr = now.toISOString().slice(0, 16);
            $('#FechaEntrega').val(nowStr);
            $('#FechaPublicacion').val(nowStr);
        });
    </script>
}